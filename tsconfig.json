{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@ewam/openapi-typescript/helpers": [
        "src/index.ts"
      ],
      "*": [
        "src/*",
        "node_modules/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "exclude": [
          "**/node_modules/**"
        ]
      },
      {
        "transform": "scripts/typescript-transform-extensions.cjs",
        "extensions": {
          ".ts": ".js"
        },
      }
    ]
  },
  "include": [
    "scripts",
    "examples",
    "bin",
    "src",
    "test",
    "*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}